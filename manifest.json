{
  "name": "GitHub ITV Jira",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "Inject's a button to the GitHub pages to move the corresponding Jira ticket to either Code Review or Dev Complete",
  "homepage_url": "https://github.com/Jride/Github-ITV-Jira-Chrome-Ext",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "externally_connectable": {
    "matches": ["*://*.github-jira-itv.herokuapp.com/*"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/ITV/*"
      ],
      "run_at": "document_idle",
      "css": [
        "css/modal.min.css",
        "css/custom.css"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "js/modal/modal.min.js",
        "src/inject/main.js",
        "src/inject/spinner.js",
        "src/inject/ticketstatus.js",
        "src/inject/jiraapi.js",
        "src/inject/modal.js"
      ]
    }
  ]
}
